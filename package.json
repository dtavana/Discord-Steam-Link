{
    "name": "discord-steam-link",
    "version": "0.1.0",
    "description": "Link discord and steam account and save to a MongoDB",
    "main": "app.ts",
    "scripts": {
        "build": "npm run lint && rm -rf dist && tsc",
        "build:dev": "rm -rf dist && tsc",
        "dev": "npm run build:dev && node dist/app.js NODE_ENV=development",
        "prod": "npm run build && node dist/app.js NODE_ENV=production",
        "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
        "lint": "eslint . --ext .ts",
        "lint-fix": "eslint . --ext .ts --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dtavana/discord-steam-link.git"
    },
    "author": "twist#7777",
    "license": "MIT",
    "homepage": "https://github.com/dtavana/discord-steam-link#readme",
    "dependencies": {
        "ejs": "^2.7.1",
        "ejs-lint": "^0.3.0",
        "express": "^4.17.1",
        "express-session": "^1.17.0",
        "js-yaml": "^3.13.1",
        "moment": "^2.24.0",
        "mongoose": "^5.7.6",
        "node-fetch": "^2.6.0",
        "passport": "^0.4.0",
        "passport-steam": "^1.0.11"
    },
    "devDependencies": {
        "@types/express": "^4.17.1",
        "@types/express-session": "^1.15.15",
        "@types/mongodb": "^3.3.6",
        "@types/mongoose": "^5.5.22",
        "@types/node": "^13.13.15",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-no-loops": "^0.3.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "typescript": "^3.9.7"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-commit": "git update-index --again"
        }
    },
    "lint-staged": {
        "*.{ts,json}": [
            "npm run prettier-format --",
            "npm run lint-fix --"
        ]
    }
}
